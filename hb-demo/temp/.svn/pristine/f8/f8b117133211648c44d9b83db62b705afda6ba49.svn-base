header {
	width: 100%;
	height: 4.81rem;
	padding-top: 0.6rem;
	background: url("../image/n-bg.png") no-repeat center/cover;
	background-size: 100% 100%;
	position: fixed;
	top: 0;
	z-index: 20;
}

p {
	margin: 0;
}

header p {
	font-size: 0.6rem;
	font-weight: bold;
	color: #fff;
	text-align: center;
}

p.num01 {
	height: 1.33rem;
	line-height: 1.33rem;
	letter-spacing: 0.05rem;
}

p.num02 {
	text-indent: 2.5em;
	margin: 0.45rem 0;
	letter-spacing: 0.05rem;
}

p.num03 {
	text-indent: 8em;
}

p.num03 span {
	letter-spacing: normal;
}

html {
	background-color: white;
}

.inform-item>div {
	width: 25%;
}

#number {
	/* border: 1px solid red; */
	margin-top: 4.61rem;
	margin-bottom: 1.65rem;
	width: 100%;
	background: #fff;
	padding: 0.2rem 0;
}

.inform-item {
	width: 11.53rem;
	height: 1.43rem;
	background: #fff;
	box-shadow: 0 0 0.2rem rgba(0, 0, 0, 0.3);
	border-radius: 0.4rem;
	margin: 0.3rem auto 0;
	padding: 0 0.47rem;
	display: flex;
	display: -webkit-flex;
	justify-content: space-between;
	align-items: center;
	font-size: 0.5rem;
	overflow: hidden;
}

.inform-item>img {
	width: 0.91rem;
	height: 0.91rem;
	vertical-align: bottom;
	border-radius: 50%;
}

.rise .c-money {
	/* color: #00C96E; */
}

.rise .arrow-t {
	/* color: #fff;
	background:#00C96E; */
	/* width: 1.92rem; */
	height: 0.6rem;
	line-height: 0.6rem;
	text-align: center;
	border-radius: 0.2rem;
	display: flex;
	display: -webkit-flex;
	justify-content: flex-start;
	align-items: center;
}

.rise .arrow-t>img {
	width: 0.48rem;
	height: 0.6rem;
	vertical-align: bottom;
}

