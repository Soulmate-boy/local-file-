						}
					});
				},
				bia(r){
					mui('#demo1').progressbar().setProgress(r*10);	
					$("#fenzi").html(r)
				}
			},
			watch: {
				num() {
					if (this.num <= 1) {
						this.num = 1;
					};
					if(this.num >= 10){
						this.num = 10;
					}
					this.bia(this.num);
				}
			}
		});
